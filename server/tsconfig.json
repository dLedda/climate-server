{
  "compilerOptions": {
    "outDir": "../app-dist/server",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*"],
  "lib": [
    "dom",
    "dom.iterable",
    "esnext"
  ]
}